        <TextView android:textSize="15dp" android:textStyle="bold" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/lbl_status_uploader" android:text="Uploader : "></TextView>
        <ListView android:stackFromBottom="false" android:transcriptMode="alwaysScroll" android:layout_width="fill_parent" android:id="@+id/lst_status_uploader" android:layout_height="50dp"></ListView>
