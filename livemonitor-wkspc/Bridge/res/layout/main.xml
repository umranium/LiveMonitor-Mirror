        <TextView android:textSize="15dp" android:textStyle="bold" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="GPS : " android:id="@+id/lbl_status_gps"></TextView>
        <ListView android:stackFromBottom="false" android:transcriptMode="alwaysScroll" android:layout_width="fill_parent" android:id="@+id/lst_status_gps" android:layout_height="50dp"></ListView>
    </LinearLayout>
